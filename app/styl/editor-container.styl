.editor-container
  width: 100%
  height: 100%
  // border: 1px solid #000
  display: flex
  flex-direction: row
  position: fixed
  justify-content: space-between

.editor-container__folder
  height: 100%
  flex: 1

.editor-container__preview
  height: 100%
  // background: #e0e0
  border-left: 1px solid #e0e0e0
  border-right: 1px solid #e0e0e0
  flex: 4

.editor-container__editor
  height: 100%
  flex: 4

.editor-container__tools
  flex: 1
  max-width: 70px
  height: 100%
  ul
    list-style: none
    padding: 0px 10px
    li
      text-align: center
      // color: #000
